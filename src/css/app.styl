// app global css
.q-loading > div {
    text-shadow: none;
}

$primary = #027be3
// Separate into component
@font-face
   font-family Geo
   font-style normal
   src url(../assets/fonts/OpenSans-Regular.ttf)

* {
  font-family: 'Open Sans', sans-serif;
}

@import 'themes/common.variables'
@import 'box'
@import 'btn'
@import 'card'
@import 'drawer'
@import 'header'
@import 'helpers'

// Separate into component
@import url('https://fonts.googleapis.com/css?family=Roboto:300,400,500,700')
@import url('https://fonts.googleapis.com/css?family=Open+Sans:300,400,700');



body
  background: linear-gradient(87deg,#f4f5f7,#f4f4f7)!important;

h3
  font-family: Open Sans,sans-serif;
  font-size: 1.825em
  line-height: 1.4em
  color: #3C4858
  font-weight: 700
  line-height: 1.7;
  text-decoration: none
  h6
    font-weight: 400

h5,
p,
a,
.control-label
.form-control
  font-family: "Roboto", "Helvetica", "Arial", sans-serif
  font-weight: 300

.form-title 
  text-align: center
  margin: 20px

.image-container:before
  content: "";
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: #000000;
  opacity: .3;

.image-container
  background-image: url("../assets/img/login_background.jpg")
  height: auto;
  min-height: 100vh;
  background-position: center center;
  background-size: cover;
  position: relative;

.row
  display: flex
  margin: auto

.muted-text
  font-size: .875rem
  color: #adb5bd

.secondary-text
  font-family: Open Sans,sans-serif;
  font-weight: 300;
  line-height: 1.7;

.primary-text
  color: $primary
