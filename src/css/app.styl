// Separate into component
@import 'themes/common.variables'
@import 'box'
@import 'btn'
@import 'card'
@import 'drawer'
@import 'form'
@import 'header'
@import 'helpers'
@import 'offlineMap'
@import 'pageBuilder'

// Separate into component
@import url('https://fonts.googleapis.com/css?family=Roboto:300,400,500,700')
@import url('https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700');

@font-face
   font-family Geo
   font-style normal
   src url(../assets/fonts/OpenSans-Regular.ttf)

* {
  font-family: 'Open Sans', sans-serif;
}

body::-webkit-scrollbar {
    display: none;  // Safari and Chrome
}

body
  color: #525f7f;
  background-color: #f8f9fe !important;

h4,
h3
  font-family: Open Sans,sans-serif;
  font-size: 1.825em
  line-height: 1.4em
  color: #3C4858
  font-weight: 700
  line-height: 1.7;
  text-decoration: none
  h6
    font-weight: 400

h5,
p,
a,
  font-family: "Roboto", "Helvetica", "Arial", sans-serif
  font-weight: 300

legend
  color: #8898aa!important
  display: block;
  font-family: inherit;
  font-size: 16px;
  font-weight: 600;
  letter-spacing: .04em
  line-height: 1.5;
  margin-bottom: .5rem;
  max-width: 100%;
  padding-bottom: .25rem
  padding-top: .25rem
  text-transform: uppercase
  white-space: normal;
  width: 100%;

.control-label
  font-size: .875rem !important;
  font-weight: 600 !important;
  color: #525f7f !important;

.form-title
  text-align: center
  margin: 20px

.image-container:before
  content: "";
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: #000000;
  opacity: .3;

.image-container
  background-image: $background-login-img-url
  height: auto;
  min-height: 100vh;
  background-position: center center;
  background-size: cover;
  position: relative;

.row
  display: flex !important
  flex-wrap: wrap< !important
  margin: auto !important

.muted-text
  font-size: .875rem
  color: #adb5bd

.secondary-text
  font-family: Open Sans,sans-serif;
  font-weight: 300;
  line-height: 1.7;

.primary-text
  color: $primary
