$primary = #027be3
$success = #4caf50

.btn
  border: none
  border-radius: 3px
  transition: box-shadow 0.2s cubic-bezier(0.4, 0, 1, 1), background-color 0.2s cubic-bezier(0.4, 0, 0.2, 1)
  will-change: box-shadow, transform
  font-size: 12px
  text-transform: uppercase
  font-weight: 500
  
.btn-success
  background-color: $success
  box-shadow: 0 2px 2px 0 rgba($success, 0.14), 0 3px 1px -2px rgba($success, 0.2), 0 1px 5px 0 rgba($success, 0.12)

.btn.btn-success:hover
  box-shadow: 0 14px 26px -12px rgba($success, 0.42), 0 4px 23px 0px rgba(0, 0, 0, 0.12), 0 8px 10px -5px rgba($success, 0.2)

.btn-primary
  background-color: $primary
  box-shadow: 0 2px 2px 0 rgba($primary 0.14), 0 3px 1px -2px rgba($primary 0.2), 0 1px 5px 0 rgba($primary 0.12)
